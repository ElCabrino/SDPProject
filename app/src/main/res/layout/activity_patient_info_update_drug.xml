<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/patientInfoUpdateDrugTextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update information" />

    <EditText
        android:id="@+id/patientInfoUpdateDrugDrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/drug" />

    <EditText
        android:id="@+id/patientInfoUpdateDrugDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/dosage" />

    <EditText
        android:id="@+id/patientInfoUpdateDrugFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Frequency" />


    <Button
        android:id="@+id/buttonPatientInfoUpdateDrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />


    <Button
        android:id="@+id/buttonPatientInfoDeleteDrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />


</LinearLayout>