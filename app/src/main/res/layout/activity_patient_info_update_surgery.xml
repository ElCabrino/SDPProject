<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/patientInfoUpdateSurgeryTextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update information" />

    <EditText
        android:id="@+id/patientInfoUpdateSurgeryType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Surgery" />

    <EditText
        android:id="@+id/patientInfoUpdateSurgeryYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/year" />


    <Button
        android:id="@+id/buttonPatientInfoUpdateSurgery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />


    <Button
        android:id="@+id/buttonPatientInfoDeleteSurgery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />

</LinearLayout>