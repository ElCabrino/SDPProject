<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/patientInfoUpdateDrugReactionTextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update information" />

    <EditText
        android:id="@+id/patientInfoUpdateDrugReactionDrug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/drug" />

    <EditText
        android:id="@+id/patientInfoUpdateDrugReactionReaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Reaction" />


    <Button
        android:id="@+id/buttonPatientInfoUpdateDrugReaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />


    <Button
        android:id="@+id/buttonPatientInfoDeleteDrugReaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete" />



</LinearLayout>