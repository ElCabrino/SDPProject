<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forwardCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_item"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Full cardview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <!-- Left container with sended doctor and adviced doctor -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/firstDoctorRequested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor 1"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="5dp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adviced_you_to_visit"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/secondDoctorAdviced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor 2"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>


        <!-- Right container with take appointment button and remove forward -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/seeForwadedDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="See Doctor" />

            <Button
                android:id="@+id/deleteForwardRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Delete" />



        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>