<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="100dp"
                android:gravity="center"
                android:text="@string/your_profile"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/lastnameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile last name"
                android:enabled="false"
                android:gravity="start"
                android:text=""
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile name"
                android:enabled="false"
                android:gravity="start"
                android:text=""
                android:textSize="20sp" />


            <TextView
                android:id="@+id/birthdayProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile birthday"
                android:gravity="start"
                android:text=""
                android:textSize="20sp" />


            <TextView
                android:id="@+id/genderProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile gender"
                android:gravity="start"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emailProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile email"
                android:gravity="start"
                android:text=""
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/streetProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="profile street"
                    android:enabled="false"
                    android:text=""
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/numberStreetProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:contentDescription="profile street number"
                    android:enabled="false"
                    android:text=""
                    android:textSize="20sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/cityProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile city"
                android:enabled="false"
                android:text=""
                android:textSize="20sp" />

            <EditText
                android:id="@+id/countryProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="profile country"
                android:enabled="false"
                android:gravity="start"
                android:text=""
                android:textSize="20sp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:contentDescription="profile save button"
                android:text="Save"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="profile edit button"
                    android:text="Edit" />

                <Button
                    android:id="@+id/buttonDoctorComingAppointments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="openChats"
                    android:text="Next appointments" />

                <Button
                    android:id="@+id/requestsListButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requests"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="profile logout button"
                    android:text="Logout" />

                <Button
                    android:id="@+id/searchDoctorButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="profile search button"
                    android:text="Search" />

                <Button
                    android:id="@+id/setAvailabilityButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="set availability button"
                    android:text="Set Availability"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/chats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="openChats"
                    android:text="Chats" />

            </LinearLayout>
            <Button

                android:id="@+id/buttonNextAppointments"
                android:contentDescription="personal appointments button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your appointments"
                android:layout_weight="1"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/patientInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="patient info button"
        android:text="Patient Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />

</android.support.constraint.ConstraintLayout>